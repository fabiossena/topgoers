                        <Label 
                            Text="Do you are a top goer? :D" 
                            FontSize="12" 
                            FontAttributes="Italic" 
                            TextColor="White" />
                    </ContentView>
                
                    <ContentView
                        Grid.Row="1" 
                        Grid.ColumnSpan="2" >
                        <Label 
                           Text="Buy vouchers for your favorite restaurants!!!" 
                           FontSize="12"
                           TextColor="White"
