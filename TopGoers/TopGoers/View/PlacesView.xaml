                        <Label 
                           Text="Filters" 
                           FontSize="10"
                           TextColor="Silver"/>
                    </ContentView>
                </Grid>
                -->
                
                
                <Grid>
                    <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                    <StackLayout 
                        BackgroundColor="WhiteSmoke"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill" />
                    <Label 
                        Text="Filter" 
                        FontSize="Small" 
                        Margin="0, 2, 4, 0"
                        HorizontalTextAlignment="End" 
                        BackgroundColor="Transparent"
                        TextColor="Silver" />
                    
                <Button 
                    Command="{Binding FilterCommand}"
                    Margin="-9"
                    Opacity="0"
                    VerticalOptions="Fill" 
                    HorizontalOptions="Fill" />

                <ListView Grid.Row="1" ItemsSource="{Binding Places}" x:Name="ListPlaces">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout HorizontalOptions="StartAndExpand">
                                        <Label Text="{Binding Name}" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Behaviors>
                            <behaviors:EventHandlerBehavior EventName="ItemTapped">
                                <behaviors:InvokeCommandAction Command="{Binding ListPlacesItemTappedCommand}" />
                            </behaviors:EventHandlerBehavior>
                        </ListView.Behaviors>
                    </ListView>
                </Grid>

        
            </StackLayout>

            <ContentView
                   
                   AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="All"
                   IsVisible="{Binding IsVisibleFilter}"
                   BackgroundColor="#C0808080">

                <StackLayout 
                     Orientation="Vertical"
                     BackgroundColor="White"
                     HorizontalOptions="Center"
                     VerticalOptions="Start"
                     Margin="0,5,0,0"
                     Padding="5">

                    <Picker 
                        x:Name="PickerState"
                        ItemsSource="{Binding States}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedState, Mode=TwoWay}"
                        Title="State">
                        <Picker.Behaviors>
                            <behaviors:EventHandlerBehavior EventName="SelectedIndexChanged">
                                <behaviors:InvokeCommandAction Command="{Binding StateChangedCommand}" />
                            </behaviors:EventHandlerBehavior>
                        </Picker.Behaviors>
                    </Picker>
                        
                    <Picker 
                        ItemsSource="{Binding Cities}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedCity, Mode=TwoWay}"
                        Title="City"/>


                    <Entry Text="{Binding Search}" 
                           Placeholder="Type a search" />
                    <!-- AbsoluteLayout.LayoutBounds=".5,350,160,60" 
                            AbsoluteLayout.LayoutFlags="XProportional" 
                            BorderRadius="30" 
                            -->

                    <StackLayout 
                        Orientation="Horizontal"
                        HorizontalOptions="Center">

                            <!-- AbsoluteLayout.LayoutBounds=".5,350,160,60" 
                            AbsoluteLayout.LayoutFlags="XProportional" 
                            BorderRadius="30" 
                            -->
                        <Button BackgroundColor="{StaticResource Primary}" 
                                TextColor="White" 
                                Text="Cancel" 
                                Command="{Binding SearchCancelCommand}" />

                        <Button 
                            BackgroundColor="{StaticResource Primary}" 
                            TextColor="White" 
                            Text="Apply" 
                            Command="{Binding SearchCommand}">
                            <!--
                            <Button.Image>
                                <OnPlatform                             
                                x:TypeArguments="FileImageSource"
                                Android="Search.png" />
                            </Button.Image> -->
                        </Button>
                    </StackLayout>
                </StackLayout>
            </ContentView>
            
        </AbsoluteLayout>
        
    </ContentPage.Content>
</ContentPage>