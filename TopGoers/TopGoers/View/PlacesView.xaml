                    <ContentView 
                        IsVisible="False"
                        VerticalOptions="FillAndExpand">
                        <Label 
                            Text="Top Goers" 
                            FontSize="36" 
                            FontAttributes="Italic" 
                            TextColor="White" />
                    </ContentView>
                
                    <ContentView 
                        Grid.Column="1"  
